{
    "version": "0.2.0",
    "projectName": "f303_blinky_bm",
    "configurations": [
        {
            "type": "cortex-debug",
            "request": "launch",
            "name": "Debug Jlink",
            "cwd": "${workspaceRoot}",
            "executable": "./build/firmware.elf",
            "servertype": "jlink",
            "device": "STM32F303VC",
            "interface": "swd",
            "serialNumber": "774398515", // Debugger serial number
            "runToEntryPoint": "main",
            "preLaunchTask": "Build",
            "svdFile": "./STM32F303.svd", // Include svd to watch device peripherals
        }
    ]
}